{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended"],
    "ignorePaths": ["**/requirements*.txt"],
    "pip_requirements": {
        "fileMatch": ["^$"]
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "enabledManagers": ["poetry"],
            "automerge": false
        }
    ]
}
